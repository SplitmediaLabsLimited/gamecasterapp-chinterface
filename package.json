{
  "name": "chinterface",
  "version": "2.7.1",
  "description": "Universal Chat interface library for popular stream services",
  "main": "dist/chinterface.js",
  "unpkg": "dist/chinterface.umd.js",
  "module": "dist/chinterface.modern.js",
  "source": "src/chat.js",
  "scripts": {
    "build": "microbundle --globals tmi.js=tmi -f modern,cjs,umd",
    "format": "prettier --single-quote --tab-width 2 --write 'src/**/*.js'",
    "prepare": "yarn run build"
  },
  "devDependencies": {
    "html-entities": "^1.3.1",
    "microbundle": "0.12.4",
    "prettier": "^2.1.2",
    "tmi.js": "^1.5.0"
  },
  "peerDependencies": {
    "tmi.js": ">= 1.5.0"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gamecasterapp/chinterface.git"
  },
  "keywords": [
    "Chat",
    "Twitch",
    "Youtube"
  ],
  "author": "Gamecaster",
  "license": "MIT",
  "homepage": "",
  "dependencies": {
    "redaxios": "^0.3.0"
  }
}
